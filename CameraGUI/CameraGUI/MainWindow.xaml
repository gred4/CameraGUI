        <Slider x:Name="slider_Copy1" Grid.Column="2" HorizontalAlignment="Left" Margin="470,556,0,0" Grid.Row="2" VerticalAlignment="Top" Width="97"/>
        <TextBox x:Name="textBox" Grid.Column="2" HorizontalAlignment="Left" Height="29" Margin="152,518,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="128"/>
        <Image x:Name="image" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Height="504" Margin="0,1,0,0" Grid.Row="2" VerticalAlignment="Top" Width="607"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="155" Margin="-2,363,0,0" Grid.Row="2" VerticalAlignment="Top" Width="84" Grid.ColumnSpan="2" SelectionChanged="listBox_SelectionChanged">
